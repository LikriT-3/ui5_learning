<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        >
    <Dialog class="sapUiContentPadding" 
            title="{Title}"
            contentWidth="35%"
            contentHeight="50%"
            >
        
               <Text text="{Description}"/>
        
        <buttons>
            <Button 
            text="Закрыть" 
            press=".onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>