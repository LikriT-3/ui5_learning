<core:FragmentDefinition
xmlns:core='sap.ui.core'
displayBlock="true"
xmlns="sap.m"
xmlns:smartTable='sap.ui.comp.smarttable'
>
    <Dialog class="sapUiContentPadding" 
            title="{i18n>Favourite}"
            contentWidth="35%"
            contentHeight="50%">
     
          
           
                    <smartTable:SmartTable
				        id="FovouriteBooks"
				        header="{i18n>TableTitle}"
				        entitySet="FavouriteBookSet"
				        useExportToExcel="false"
				        useVariantManagement="false"
				        enableAutoBinding="true"
				        editable="{state>/editMode}"
				        editTogglable="true"
				        editToggled="onEditToggled"
                        >
                   
                    <Table 
                        sticky="ColumnHeaders"
                        alternateRowColors="true"
                        growing="true"
                        fixedLayout="false"
                        growingThreshold="300"
                        mode="{= (${state>/editMode} === true) ? 'Delete' : 'None'}"
                        delete="onDeleteRow"
                        growingScrollToLoad="true"
                      >
                        <columns>
                           
                            <Column>
                                <customData>
                                    <core:CustomData key="p13nData"
                                                        			value='\{
                                                                    "columnIndex": "0",
                                                                    "columnKey": "BookDescr",
                                                                    "leadingProperty": "BookDescr",
                                                                    "sortProperty": "BookDescr",
                                                                    "filterProperty": "BookDescr"
                                                                }'/>
                                </customData>
                                <header>
                                    <Text text="{i18n>Title}"/>
                                </header>
                            </Column>
                            <Column>
                                <customData>
                                    <core:CustomData  
																key="p13nData"
                                                       			value='\{
                                                                    "columnIndex": "1",
                                                                    "columnKey": "Authors",
                                                                    "leadingProperty": "Authors",
                                                                    "sortProperty": "Authors",
                                                                    "filterProperty": "Authors"
                                                                }'/>
                                </customData>
                                <header>
                                    <Text text="{i18n>Author}"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                               <ColumnListItem   
                            
                            type="Navigation" 
                            press=".onPressColumnListItemFromFav" 
                         
                           >
                        
                                <cells>
                                     <Text text="{BookDescr}"/>
                                </cells>
                                <cells>
                                    <Text text="{Authors}"/>
                                 
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </smartTable:SmartTable>

           
            
    
        <buttons>
            <Button text="{i18n>Close}" press=".onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>