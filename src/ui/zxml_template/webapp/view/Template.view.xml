<core:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout.form"
    xmlns:smf="sap.ui.comp.smartform"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">

    <template:alias name="TU" value="z.xml.tmpl.module.TemplateUtils">
        <template:alias name="AH" value="sap.ui.model.odata.AnnotationHelper">
            <template:with path="meta>com.sap.vocabularies.UI.v1.FieldGroup" var="group">

                <VBox>

                    <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
                        <items>
                            <IconTabFilter text="Currency">
                            </IconTabFilter>
                        </items>
                    </IconTabBar>

                    <template:repeat list="{group>Data}">
                        <Text text="{group>Value/Path}" class="sapUiSmallMargin"/>
                    </template:repeat>

                    <template:repeat list="{group>Data}">

                        <Text text="{
                            path:'group>',
                            formatter:'TU.exampleFormatter'
                        }" class="sapUiSmallMargin"/>

                    </template:repeat>

                    <template:with path="device>" var="system">
                        <template:if test="{system>desktop}">
                            <template:then>
                                <Text text="Desktop" class="sapUiSmallMargin"/>
                            </template:then>
                            <template:elseif test="{system>phone}">
                                <Text text="Phone" class="sapUiSmallMargin"/>
                            </template:elseif>
                        </template:if>
                    </template:with>

                    <template:repeat list="{json>/toButtons}">
                        <Button text="{json>name}" class="sapUiSmallMargin"/>
                    </template:repeat>
                </VBox>

            </template:with>

        </template:alias>
    </template:alias>
</core:View>



